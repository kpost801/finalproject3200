<fieldset class="border m-3 p-3">
    <div>
      <%= f.label :content, style: "display: block" %>
      <%= f.text_field :content %>
    </div>

    <div>
      <%= f.label :answer, style: "display: block" %>
          <%= f.select :answer, [["Multiple Choice", 1], ["Essay",2], ["True/False",3], ["Multiple Answer",4]] %>
    </div>

    
    <div>
      <% if f.object.id == -1 %>
        <%= link_to "Cancel", "#", class: "btn btn-secondary cancel_question_fields" %>
      <% else %>
        <%= f.hidden_field :_destroy %>
        <%= link_to "Remove", "#", class: "btn btn-danger remove_question_fields" %>
      <% end %>
    </div>
</fieldset>